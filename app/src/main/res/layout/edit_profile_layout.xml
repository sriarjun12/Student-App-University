<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="25dp"
    android:orientation="vertical"
    android:paddingRight="25dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_cardCollapsedHeight="4dp"
        app:mtf_labelColor="@android:color/black"
        app:mtf_openKeyboardOnFocus="true"
        app:mtf_hasFocus="true"
        app:mtf_image="@drawable/student"
        app:mtf_backgroundColor="#FFF4CB"
        >
        <EditText
            android:id="@+id/edt_department"
            android:hint="Department"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.github.florent37.materialtextfield.MaterialTextField>
    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_cardCollapsedHeight="4dp"
        app:mtf_labelColor="@android:color/black"
        app:mtf_openKeyboardOnFocus="true"
        app:mtf_hasFocus="true"
        app:mtf_image="@drawable/location"
        app:mtf_backgroundColor="#FFF4CB"
        >
        <EditText
            android:id="@+id/edt_address"
            android:hint="Address"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.github.florent37.materialtextfield.MaterialTextField>
    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_cardCollapsedHeight="4dp"
        app:mtf_labelColor="@android:color/black"
        app:mtf_openKeyboardOnFocus="true"
        app:mtf_hasFocus="true"
        app:mtf_image="@drawable/parent"
        app:mtf_backgroundColor="#FFF4CB"
        >
        <EditText
            android:id="@+id/edt_parent_name"
            android:hint="Parent Name"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.github.florent37.materialtextfield.MaterialTextField>
    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_cardCollapsedHeight="4dp"
        app:mtf_labelColor="@android:color/black"
        app:mtf_openKeyboardOnFocus="true"
        app:mtf_hasFocus="true"
        app:mtf_image="@drawable/mobile"
        app:mtf_backgroundColor="#FFF4CB"
        >
        <EditText
            android:id="@+id/edt_parent_mobile"
            android:hint="Parent Mobile"
            android:singleLine="true"
            android:maxLines="1"
            android:maxLength="10"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.github.florent37.materialtextfield.MaterialTextField>
</LinearLayout>